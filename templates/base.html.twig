                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="">Admin</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Gestion Pizza
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="">ajouter une pizza</a>
                                <a class="dropdown-item" href="">modifier une pizza</a>
                            </div>
                        </li>

                    {% endif %}
                </ul>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div>
    <form method="get" action="/logout">
        <button type="submit" class="btn btn-danger" value="Submit">Deconnexion</button>
    </form>
</div>

    {% else %}

        <div class="">
            <form method="POST" action="{{ path("connexion") }}" id="form" class="form-inline my-2 my-lg-0">
                <label for="email">Email :</label>
                <input type="text" class="form-control mr-sm-2" name="_username" id="email" value="admin@admin.fr">
                <label for="mdp">Mdp :</label>
                <input type="password" class="form-control mr-sm-2" name="_password" id="mdp" value="admin">

                <button type="submit" class="btn btn-success my-2 my-sm-0" value="Submit">Connexion</button>


            </form>
        </div>
                {% endif %}
