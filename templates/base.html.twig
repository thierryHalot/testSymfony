                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cartes</a>
                    </li>
                    {% if not is_granted('ROLE_USER') %}
